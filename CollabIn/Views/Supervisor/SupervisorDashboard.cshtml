
@{
    ViewBag.Title = "SupervisorDashboard";
}

<h2>SupervisorDashboard</h2>

<div class="container my-5">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h2 class="fw-bold">Your Projects</h2>
            <p class="text-muted">Overview of all your projects</p>
        </div>
        <div class="col text-end">
            @Html.ActionLink("Create New Project", "Create", "Supervisor",
            new {@class = "btn btn-success"})
        </div>
    </div>

    <div class="row g-4">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text mb-2">
                                @{
                                    string badgeClass = "bg-secondary"; // default

                                    if (item.Status == "Open")
                                    {
                                        badgeClass = "bg-primary";
                                    }
                                    else if (item.Status == "Ongoing")
                                    {
                                        badgeClass = "bg-warning text-dark";
                                    }
                                    else if (item.Status == "Closed")
                                    {
                                        badgeClass = "bg-success";
                                    }
                                }

                                <span class="badge @badgeClass">@item.Status</span>
                            </p>
                            <p class="card-text mb-2"><strong>Start:</strong> @item.StartDate</p>
                            <p class="card-text mb-2"><strong>End:</strong> @item.EndDate</p>
                            <p class="card-text mb-3"><strong>Members:</strong> @item.Members</p>
                            <div class="mt-auto">
                                @Html.ActionLink( "View", "ProjectDetail", "Supervisor", 
                                new{Id = @item.Id}, 
                                new {@class = "btn btn-primary btn-sm me-2"})

                                <a href="#" class="btn btn-outline-secondary btn-sm">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="row mb-4 text-center">
                <div class="col">
                    <h2 class="fw-bold">No Projects Found</h2>
                    <p class="text-muted">You currently have no projects. Start by creating your first project!</p>
                    <a href="#" class="btn btn-success btn-lg">Create New Project</a>
                </div>
            </div>
        }


        <!-- Project Card End -->
    </div>
</div>

