@{
    ViewBag.Title = "Create";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark mb-0">
            <i class="bi bi-plus-circle me-2"></i> Create Project
        </h2>
        @Html.ActionLink("Back", "SupervisorDashboard", "Supervisor", null,
            new { @class = "btn btn-outline-dark fw-semibold px-4 rounded-pill shadow-sm" })
    </div>

    <!-- Card -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-dark text-white rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i> New Project Details</h4>
        </div>

        <div class="card-body p-4 bg-white">

            <!-- Success Message -->
            @if (TempData["SuccessMsg"] != null)
            {
                <div class="alert alert-success rounded-3 shadow-sm" role="alert">
                    <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMsg"]
                </div>
            }

            <!-- Error Message -->
            @if (TempData["ErrorMsg"] != null)
            {
                <div class="alert alert-danger rounded-3 shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i> @TempData["ErrorMsg"]
                </div>
            }

            <!-- Form -->
            <form method="post" class="needs-validation" novalidate>
                <!-- Project Title -->
                <div class="mb-3">
                    <label for="projectTitle" class="form-label fw-semibold">Project Title</label>
                    <input type="text" name="Title" class="form-control shadow-sm" id="projectTitle" placeholder="Enter project title">
                </div>

                <!-- Start Date -->
                <div class="mb-3">
                    <label for="startDate" class="form-label fw-semibold">Start Date & Time</label>
                    <input type="datetime-local" name="StartDate" class="form-control shadow-sm" id="startDate">
                </div>

                <!-- End Date -->
                <div class="mb-3">
                    <label for="endDate" class="form-label fw-semibold">End Date & Time</label>
                    <input type="datetime-local" name="EndDate" class="form-control shadow-sm" id="endDate">
                </div>

                <!-- Details -->
                <div class="mb-4">
                    <label for="projectDetails" class="form-label fw-semibold">Project Details</label>
                    <textarea name="Details" class="form-control shadow-sm" rows="4" placeholder="Enter detailed description of the project"></textarea>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark btn-lg fw-semibold rounded-pill shadow-sm">
                        <i class="bi bi-check-lg me-2"></i> Create Project
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
